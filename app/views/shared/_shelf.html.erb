<%@changedPoints = 0%>

<div id='bigshelf'>
    <div class='shelf' id='shelf_0'>
        <ul class='shelf_ul'>
            <li class='shelf_li' id='account'>
                <%= link_to (content_tag :i, '', :class => ('st_img_2 char ' + @student.image)), student_path(@student.id) unless @student.image.blank? %>
                <%=  link_to (image_tag ("default_70x70.png"), :size => "70x70", :class => "st_img"), student_path(@student.id) if @student.image.blank?%>
                <%= link_to 'Account',  student_path(@student.id), :class => 'plate' %>
            </li>
            <li class='shelf_li'>
                <div id='points'>
                    <%= render  :partial => 'students/student_points' %>
                </div>
                <a class='plate' style='margin-top:7px'>Points</a>
            </li>
            <li class='shelf_li'> 
                <div class="btn-group"> 
                    <!-- <button class="btn btn-success dropdown-toggle dropdown-toggle2" data-toggle="dropdown" > -->
                    <%= link_to "","#", :class => "btn btn-success dropdown-toggle dropdown-toggle2", :id => "notifications", :data => {:toggle => "dropdown"}, remote: :true %>
                        <span class="caret" style='margin-left:16px'></span>
                    </button>
                    <div id='news'>
                        <%= render  "students/notifications" %>
                    </div>    	
                </div>
            </li>
            <li class='shelf_li'>
                <%= render "shared/badge", :shape => 1, :shape_name => "tetrahedron", :student => @student, :plate_class => "plate", :ajax => false %>
            </li>
            <li class='shelf_li'>
                <%= render "shared/badge", :shape => 2, :shape_name => "cube", :student => @student, :plate_class => "plate", :ajax => false %>
            </li>
            <li class='shelf_li'>
                <%= render "shared/badge", :shape => 3, :shape_name => "octahedron", :student => @student, :plate_class => "plate", :ajax => false %>
            </li>
            <li class='shelf_li'>
                <%= render "shared/badge", :shape => 4, :shape_name => "dodecahedron", :student => @student, :plate_class => "plate", :ajax => false %>
            </li>
            <li class='shelf_li'>
                <%= render "shared/badge", :shape => 5, :shape_name => "icosahedron", :student => @student, :plate_class => "plate", :ajax => false %>
            </li>
            <li class='shelf_li'><a href="javascript:;" id="open-walkthrough"><img src='/assets/Help.png'/></a></li>
            <li class='shelf_li'><%=link_to raw("<img src='/assets/discussion.png'/>"), classroom_path(@student.classrooms.last.id), :id => 'discussion_p'%></li>
        </ul>
    </div>
    <div id="badgeModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    </div>
</div>  

<script>
    shelf_do();
</script>