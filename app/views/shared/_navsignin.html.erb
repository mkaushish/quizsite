<% if signed_in? %>
  <ul class="nav pull-right">
    <li class=divider-vertical></li>
    <li><%= link_to "Sign Out", signout_path, :method => :delete %></li>
  </ul>
<% elsif !@fakesignin.nil? %>
  <%= render :partial => 'shared/fakesignin' %>
<% else %>
  <div class=nav-collapse>
    <%= form_for(:session, {:url => sessions_path, :html => {:class => "mynavbar-form"}, :remote => true}) do |f| %>
      <ul class="nav pull-right">
        <li class=divider-vertical></li>
        <li class=text id=userfield> <%= f.text_field :email, :placeholder=>"Email" %> </li>
        <li class=text id=psswfield> <%= f.password_field :password, :placeholder => "Password" %> </li>
        <li class=button ><%= f.submit "Sign in",  :class=>"btn btn-success" %>
                          <%= link_to "Register", new_user_path, :class=>"btn btn-primary"  %>
                          <%# f.submit "Register", :class=>"btn-primary", :disabled=>"true" %></li>
      </ul>
    <% end %>
  </div>
<% end %>
