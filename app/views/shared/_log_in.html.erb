<div class="modal" id="logIn" style="display:none;"> <%# class=hide get's overridden by display-block status %>
  <div class="modal-header">
    <img src="/assets/Home/login_bar.png">
  </div>
  <div id="log_in_form" class="modal-body" style="font-family:SansSerif">
    <div id="log_in_errors">
      <% if flash[:error] %>
        <div class=form_error><%= flash[:error] %></div>
      <% end %>
    </div>
    <%= form_tag(signin_path) do |f| %>
      <div class = "field_block">
        <%= label_tag "login_email", "Username" %>
        <%= text_field_tag :login_email, flash[:email], :placeholder=>"akshat777@gmail.com" %>
      </div>
      <div class = "field_block">
        <%= label_tag "login_password", "Password" %>
        <%= password_field_tag "login_password", flash[:password], :placeholder => "*******" %>
      </div>
      <div class = "actions">
        <%= submit_tag "Sign in", :class=>"button-blue" %>
      </div>
    <% end %>
    <br>
    <div class = "field_block">
        <%= label_tag "Sign_in Via:" %>
        <%= link_to image_tag("google_logo_flat_print_small.png"), "/auth/google_oauth2" %>
    </div>
  </div>

  
</div>
