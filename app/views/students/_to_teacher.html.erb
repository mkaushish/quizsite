<div class="modal hide" id=switchToTeacher>
  <div class="modal-body" style="font-family:SansSerif">
    <% form_for(:session, {:controller => :sessions, :action => :switch_to}) do |f| %>
      <div class = "field">
        <%= f.text_field :teacher, :value => students_teacher.name, :disabled => true %>
        <%= f.hidden_field :email, :value => students_teacher.email %>
        <%= f.password_field :password, :placeholder => "Password" %>
      </div>

      <div class = "actions">
        <%= f.submit "Sign in", :class=>"btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>
