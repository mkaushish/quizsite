<%= render 'profile_menu', :@tab => 'badges' %>
<div class='row-fluid' id='prof_cont'>
<div class="row-fluid" style="text-align:center;">
    <h2 class='pro_header'>BADGES</h2>
</div>
<br /><br />
<div class="row-fluid" style='margin-top:20px'>
    <div class="badge-levels" >
        <div class="badge_row">
            <%= render "shared/badge", :shape => 1, :shape_name => "tetrahedron", :student => @student, :ajax => true, :plate_class => "b_plate" %>
        </div>
        <div class="badge_row">
            <%= render "shared/badge", :shape => 2, :shape_name => "cube", :student => @student, :ajax => true, :plate_class => "b_plate" %>
        </div>
        <div class="badge_row">
            <%= render "shared/badge", :shape => 3, :shape_name => "octahedron", :student => @student, :ajax => true, :plate_class => "b_plate" %>        
        </div>
        <div class="badge_row">
            <%= render "shared/badge", :shape => 4, :shape_name => "dodecahedron", :student => @student, :ajax => true, :plate_class => "b_plate" %>
        </div>
        <div class="badge_row">
            <%= render "shared/badge", :shape => 5, :shape_name => "icosahedron", :student => @student, :ajax => true, :plate_class => "b_plate" %>
        </div>
    </div>
</div>
<br />
<div class="row-fluid"> 
    <div id="badges_box" style="width: 60%; margin: 0 auto; background-color:white; border-radius:0px; -webkit-border-radius:0px">
        <%= render "sorted_badges", :@all_badges => @all_badges, :@student_badges => @student_badges %>
    </div>
</div>
</div>