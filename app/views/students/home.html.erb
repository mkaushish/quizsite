<div class="row-fluid">
    <div class="span6">
        <h3 style="display:inline-block;">Learning</h3>
        <ul class="breadcrumb">
            <li><b>6th Grade</b><span class="divider">&amp;</span></li>
            <li class=active>Overview</li>
        </ul>
    </div>

    <div class="pull-right">
        <%= image_tag @student.image.url(:small), :style => "margin-top:0px; margin-bottom: 30px;" %>
      
        <ul class="breadcrumb">
            <li>
                <h4><%= @student.name %></h4>
                <%= @student_class_name %>
                <h4>Points: <span class="label label-info"><%= @student.points %></span></h4>
            </li>
        </ul>
    
    </div>
</div>

<div class=row-fluid>
  <div class=span4>
    <div class='dotted-border-header'>
      <h4>Progress Center<h4>
      </div>
      <div class='dotted-border' style='min-height:400px;'>
          <%= render 'progress_center' %>
      </div>
  </div>

  <div class="span8">
    <div class=jScroll_bboard >
        <table class=list-box-table>
          <% @pset_instances.each_slice(3) do |next_3| %>
          <tr>
              <% 3.times do |i| %>
              <td><%= next_3[i].nil? ? "":(render :partial => 'pset_list_box', :object => next_3[i]) %></td>
              <% end %>
          </tr>
          <% end %>
      </table>
  </div>
</div>
</div>
