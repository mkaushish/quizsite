<div class=row-fluid>
  <h3 style="display:inline-block;">Learning</h3>
  <ul class="breadcrumb">
    <li><b>6th Grade </b><span class="divider">&gt</span></li>
    <li class=active>Overview</li>
  </ul>
</div>

<div class=row-fluid>
  <div class=span4>
    <div class='dotted-border-header'>
      <h4>Progress Center<h4>
    </div>
    <div class='dotted-border' style='min-height:400px;'>
      <ul class=column-list>
        <li class=list-header>Assignments</li>
        <% if @active_assignments.nil? || @active_assignments.empty? %>
          <li>You have no pending assignments</li>
          <li>Current Score: <b>7/10</b> &gt Chapter 1 &gt Quiz 1</li>
        <% else %>
          <% @active_assignments.each do |assignment| %>
            <%# ADD IN ACTIVE ASSIGNMENTS %>
          <% end %>
        <% end %>
      </ul>

      <ul class=column-list>
        <li class=list-header>History</li>
        <li>Yesterday you spent 12 minutes on Chapter 3</li>
        <li>2 days ago you spent 15 minutes on chapter 3</li>
      </ul>
    </div>
  </div>

  <div class="span8">
    <table class=list-box-table>
      <% @pset_instances.each_slice(3) do |next_3| %>
        <tr>
          <% 3.times do |i| %>
            <td><%= next_3[i].nil? ? "":(render :partial => 'pset_list_box', :object => next_3[i]) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
