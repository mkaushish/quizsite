<% problem_sets = @user.problem_set_instances.includes(:problem_set) # note that @user should always be a student here... %>
<% shownquiz = @shownquiz || problem_sets.first unless problem_sets.empty? %>

<div class=row-fluid>
  <h3 style="display:inline-block;">Learning</h3>
  <ul class="breadcrumb">
    <li> 6th Grade <span class="divider">&gt</span></li>
    <li><%= link_to "Overview", profile_path %></li>
  </ul>
</div>

<div class=row-fluid>

  <div class=span4>
    <div class='well sidebar-nav'>
      <ul class='nav nav-list quizlist'> 
        <li class='nav-header'>Your Problem Sets</li>

        <% problem_sets.each do |quiz| %>
          <li class="fordelete_<%= quiz.idname %>">
          <%= link_to quiz.name, "##{quiz.idname}", 
            "data-toggle" => "tab" %>
            <div style="clear:both;"></div>
            </li>
        <% end %>
        <li class=divider></li>
        <!-- <li> <%= link_to "+ New Problem Set", new_quiz_path %> </li> -->
      </ul>
    </div>
  </div>

  <div class="span8">
    <div class=tab-content>
      <% problem_sets.reverse_each do |quiz| %>
        <%= render :partial => 'quizzes/quiz', :object => quiz %>
      <% end %>
    </div>
  </div>
</div>

<% unless problem_sets.empty? %>
  <script>
    $(function () {
      $('a[href="#<%= shownquiz.idname %>"]').tab('show');
    })
  </script>
<% end %>
