<script>
  $('.'+'<%= @student.image %>').css("border","1px solid black");
  $('.'+'<%= @student.image %>').css("width","98px");
  $('.'+'<%= @student.image %>').css("height","98px");
  function select_image(value) {
    var image = value; 
    $(".char").css('border', 'none');
    $(".char").css("width","100px");
    $(".char").css("height","100px");
    $("."+image).css("border","1px solid black");
    $("."+image).css("width","98px");
    $("."+image).css("height","98px");
    $("#student_image").val(image);
  }
</script>