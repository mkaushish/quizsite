<h2>Edit Your Profile</h2>
<%= form_for @student, :url => update_student_path(@student), :html => { :multipart => true } do |f| %>        
 <% if @student.errors.any? %>
    <div class="alert alert-error">
      <div id="error_explanation">
        <h5><%= pluralize(@student.errors.count, "error") %> prohibited this comment from being saved:</h5>

        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :old_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :old_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :new_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :new_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :confirm_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :confirm_password, :class => 'text_field' %>
    </div>
  </div>
  
  <div >
    <%= f.hidden_field :image %>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <%= link_to image_tag("avatar1.jpg", :size => "60x60"),"#" ,:id=>"avatar1", :onclick=> 'select_image("avatar1.jpg")' %>
      <%= link_to image_tag("avatar2.jpg", :size => "60x60"),"#" ,:id=>"avatar2", :onclick=> 'select_image("avatar2.jpg")' %>
      <%= link_to image_tag("avatar3.jpg", :size => "60x60"),"#" ,:id=>"avatar3", :onclick=> 'select_image("avatar3.jpg")' %>
      <%= link_to image_tag("avatar4.jpg", :size => "60x60"),"#" ,:id=>"avatar4", :onclick=> 'select_image("avatar4.jpg")' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Update", :class => 'btn btn-info' %>
    <%= link_to "Cancel", studenthome_path, class: "btn" %>
  </div>
<% end %>

<script>
  function select_image(value) {
    var image = value; 
    size = value.length;
    new_size = size - 4;
    id = value.slice(0,new_size);
    $("#"+id+" img").css("border","2px solid black");
    $("#student_image").val(image);
  }
</script>