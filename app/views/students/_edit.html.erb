<div class="row-fluid" style="text-align:center;">
    <h2 class='pro_header'>EDIT YOUR PROFILE</h2>
</div>
<%= form_for @student, :url => update_student_path(@student), :html => { :multipart => true } do |f| %>        
 <% if @student.errors.any? %>
    <div class="alert alert-error">
      <div id="error_explanation">
        <h5><%= pluralize(@student.errors.count, "error") %> prohibited this comment from being saved:</h5>

        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
