<% if inputfield.is_a? TextField %>
  <%= label_tag(inputfield.name, inputfield.label) unless inputfield.label.nil? %>
  <%= text_field_tag inputfield.name%>
<% elsif inputfield.is_a? RadioButton %>
  <% inputfield.fields.each do |field| %>
    <%= radio_button_tag(inputfield.name, field) %>
    <%= label_tag(inputfield.name, field) %>
    <br>
  <% end %>
<% elsif inputfield.is_a? Dropdown %>
  <%= select_tag(inputfield.name, options_from_collection_for_select(inputfield.fields, 'to_s', 'to_s' )) %>
<% elsif inputfield.is_a? Checkbox %>
  <%= label_tag(inputfield.name, inputfield.label) unless inputfield.label.nil? %>
  <%= check_box_tag inputfield.name %>
<% else %>
  <% flash[:error] = "passed a non-inputfield into the inputfield partial!" %>
<% end %>
