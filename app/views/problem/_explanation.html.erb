<%= form_tag({:controller => 'problem', :action => 'next_subproblem'}, :remote => true, :autocomplete => "off") do %>
  <%= hidden_field_tag 'subproblem_index', @i %>
  <%= hidden_field_tag 'problem_id', @problem.id %>
  <%= render :partial => 'problem/problem', :object => @explain[@i], :locals => {:partialdir => 'problem'} %>
  <%= hidden_field_tag 'next_subproblem', "" %>
  <%= submit_tag "Submit Answer", :class=>"btn-primary" %>
<% end %>
