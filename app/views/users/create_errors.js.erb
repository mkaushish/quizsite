<% [:email, :password, :name].each do |key| %>
  <% pref_key = "#{@prefix}#{key}"
  <% if !@errors[:email].empty? %>
    $('#<%= pref_key %>').addClass('invalid');
    $('#<%= pref_key %>_e').text("<%= @errors[key].first %>");
  <% else %>
    $('#<%= pref_key %>').removeClass('invalid');
    $('#<%= pref_key %>_e').text("");
  <% end %>
<% end %>
