<div class=row-fluid>
  <div class="span3">
    <div class='well sidebar-nav'>
      <ul class='nav nav-list'>
        <% if current_user.is_a?(Teacher) %>
        <li class='nav-header'>
          <a href="#custom_problems" data-toggle="tab">Your Problems</a>
        </li>
        <% end %>
        <li class='nav-header'>SmarterGrades Grade 6</li>
        <% all_chapters.each do |chapter| %>
          <li class="<%= (chapter == @chapter) ? "active":""%>">
          <a href="#<%= chapter.to_s %>" data-toggle="tab"><%= chapter.to_s %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="span6 tab-content" id="problemtabs">
    <% if current_user.is_a?(Teacher) %>
      <div class="tab-pane active" id="custom_problems">
        <%= render :partial => 'teachers/custom_problems' %>
      </div>
    <% end %>

    <% all_chapters.each do |chapter| %>
      <div class="tab-pane<%= (chapter == @chapter) ? " active":"" %>" id="<%= chapter.to_s %>">
        <div class='section-header'>
          Try a problem from NCERT <%= chapter.to_s %>
        </div>
        <ul>
          <% ProblemType.where(:klass => chapter::PROBLEMS.map {|e| e.to_s} ).each do |problem_type| %>
            <li>
            <%= link_to problem_type, example_problem_path(problem_type) %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<script>
  $(function () {
    $('a[href="#<%= @chapter.to_s %>"]').tab('show');
    setCurQuiz();
  });
</script>
