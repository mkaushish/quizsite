<div class=row-fluid>
  <div class="span3">
    <div class='well sidebar-nav'>
      <ul class='nav nav-list'>
        <li class='nav-header'>Grade 6</li>
        <% all_chapters.each do |chapter| %>
          <li class="<%= (chapter == @chapter) ? "active":""%>">
          <a href="#<%= chapter.to_s %>" data-toggle="tab"><%= chapter.to_s %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="span6 tab-content" id="problemtabs">
    <div class='section-header'>
      Try an example problem!
    </div>
    <% all_chapters.each do |chapter| %>
      <ul class="tab-pane<%= (chapter == @chapter) ? " active":"" %>" id="<%= chapter.to_s %>" >
        <% chapter::PROBLEMS.each do |problem| %>
          <li>
          <%= link_to problem.type, example_problems_path(:type => problem) %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
<script>
  $(function () {
    $('a[href="#<%= @chapter.to_s %>"]').tab('show');
    setCurQuiz();
  });
</script>
