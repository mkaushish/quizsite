<div class=row-fluid>
  <h3 style="display:inline-block;">Learning</h3>
  <ul class="breadcrumb">
    <li><b>6th Grade </b><span class="divider">&gt</span></li>
    <li><%= link_to "Overview", studenthome_path %><span class="divider">&gt</span></li>
    <li class=active><%= @problem_set.name %></li>
  </ul>
</div>

<div class=row-fluid>
  <div class=span4>
    <div class='dotted-border-header'>
      <h4>History</h4>
    </div>

    <div class='dotted-border' style='min-height:400px;'>
      <ul id="problem_hitory" class="column-list">
        <%= render :partial => 'history_ans', :collection => @history, :as => :answer %>
      </ul>
    </div>
  </div>

  <div class="span8" >
    <div class=jScroll_bboard >
    <table class=list-box-table>
      <% @stats.each_slice(3) do |next_3| %>
        <tr>
          <% 3.times do |i| %>
            <td><%= next_3[i].nil? ? "":(render :partial => 'problem_list_box', :object => next_3[i]) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  <script> $(".jScroll_bboard").jScrollPane({hideFocus:true}); </script>
</div>
