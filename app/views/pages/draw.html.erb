<%= content_for :head do %>
  <%= javascript_include_tag "nondefault/drawtools" %>
<% end %>
<div class="logo">Drawing Tools for Geometry</div>
<%= form_tag({:action => 'check_drawing'}, :remote => true, :autocomplete => "off") do %>
  <p class=desc>The following app has a compass and straightedge which students use to solve geometry problems like the example below</p>  
  <div class=lastprobinfo><div><%= submit_tag "Check your answer", :class=>"btn-primary" %> when you think you've got it!</div></div>
  <%= hidden_field_tag 'problem_id', @problem.id %>
  <%= render :partial => 'problem/problem', :object => @problem, :locals => {:partialdir => 'problem'} %>
<% end %>
