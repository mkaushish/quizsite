<p id="notice"><%= notice %></p>

<% @problem.text.each do |elt| %>
	<% if elt.is_a? InputField %>
		<div class="solution">
			<%= field_soln(@soln, elt) %>
		</div>
	<% elsif elt.is_a? Fraction %>
		<div class="solution">
			<%= field_soln(@soln, elt.num) %> / 
			<%= field_soln(@soln, elt.den) %>
		</div>e
	<% else %>
		<div class="explanation">
			<%= elt.to_s %>
		</div> 
	<% end %>
<% end %>

<%= link_to "More Problems", root_path %>

