<div class="problem_name">
  <h2><%= @problem_type.to_s %></h2>
<%= submit_tag "Check Answer", :class => 'pull-right button-blue' %>
</div>
<%= hidden_field_tag 'problem_id', @problem.id %>
<%= hidden_field_tag 'time_taken', 0.0 %>
<%= hidden_field_tag "npstr", (!@problemanswer.nil? && @problemanswer.notepad) %>

<%= render :partial => 'problems/problem', :object => @problem, :locals => {:partialdir => 'problems'} %>

<script>
  function updateClock(s) {
    return function() {
      t = parseFloat($('#time_taken').attr('value'))
      t += s
      $('#time_taken').attr('value', t);
    }
  }
  decisecondTimer = updateClock(0.1);
  setInterval("decisecondTimer()", 100);
</script>
