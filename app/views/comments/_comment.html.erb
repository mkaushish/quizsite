<div class="row-fluid" id="comment_<%= comment.id %>">
    <div class="media">
        <%- user = comment.user -%>
        <%- unless user.image.blank? -%>
            <%= image_tag ("#{user.image}"), :size => "60x60", :class => "pull-left media-object" %>
        <%- else -%>
            <%= image_tag ("default_70x70.png"), :size => "60x60", :class => "pull-left media-object" %>
        <%- end -%>
        <div class="media-body" id="comment_body_<%= comment.id %>">
            <h4 class="media-heading"><%= comment.content %><small><%= " by: #{user.name}" %></small></h4>
            <div id ="comment_controls">
                <p>
                    <small>
                        <%= event_time_format(comment.updated_at) %>
                        <%- if current_user.id == user.id -%>
                            <%= link_to "Edit", edit_user_comment_path(user, comment), remote: :true %>
                            <%= "|" %>
                            <%= link_to "Delete", user_comment_path(user, comment), method: :delete, remote: :true  %>
                        <%- end -%>
                    </small>
                </p>
            </div>
        </div>
    </div>
    <br />
</div>