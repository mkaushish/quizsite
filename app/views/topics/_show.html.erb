<div class="row">
	
<div id='comm_all'>
	<%= link_to raw('<i class="icon-arrow-left"></i>'), classroom_path(@classroom.id), :class => "pull-right" %>
	<div id="topic_desc">
		<h4><%= topic.title %><p style='font-size:13px; margin-bottom:0px;'><%= topic.user.name %></p></h4>
		<p><%= topic.description_html %></p>
		
	</div>
	<div>
		
		
		<div class="row" id="new_comment_form" style='display:none'>
			<%= render "comments/form_for_new_comment", :user => current_user, :classroom => @classroom, :comment => @comment, :topic => topic %>
		</div>
		<div class='button-blue' id='add_comm' style='box-shadow:none'>Reply</div>
		<div class="row" id="comments">
				<%= render "comments/comments", :comments => @comments %>
		</div>
		
	</div>
</div>
<script>
form_show=false;
$('#add_comm').click(function(){
	if (!form_show){
		$('#new_comment_form').show();
		form_show=true;
		$('#add_comm').text('Cancel');
	}
	else{
		$('#new_comment_form').hide();
		form_show=false;
		$('#add_comm').text('Reply');
	}
});
$('#sub_cmt').click(function(){
	form_show=false;
	$('#new_comment_form').hide();
	$('#add_comm').text('Reply');
});
</script>
