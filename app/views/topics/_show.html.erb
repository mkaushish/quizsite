<div class="row-fluid">
	<%= link_to "<- Back to Topics", classroom_path(@classroom.id), :class => "pull-right" %>
<div class="row-fluid">
	<div class="span8" id="topic_desc">
		<h4><%= topic.title %></h4>
		<p><%= topic.description %></p>
	</div>
	<div class="span8">
		<h3>Comments: </h3>
		<h4>New Comment </h4>
		<div class="row-fluid" id="new_comment_form">
			<%= render "comments/form_for_new_comment", :user => current_user, :classroom => @classroom, :comment => @comment, :topic => topic %>
		</div>
		<div class="row-fluid" id="comments">
				<%= render "comments/comments", :comments => @comments %>
		</div>
	</div>
</div>