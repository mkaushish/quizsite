<div class='row-fluid teacher-details-header'>
  <h3 style="display:inline-block;">Learning</h3>
  <%= render :partial => 'teachers/forms/details_classroom_form' %>
  <%= render :partial => 'teachers/forms/details_problem_set_form' %>
</div>

<div class=row-fluid>
  <div class=span4>
    <div class=dotted-border-header>
      Quiz History
    </div>
    <div id='quiz_history' class='dotted-border teacher-details-column'>
      <%= render partial: 'teachers/quiz_history_assign_quiz' %>
    </div>
  </div>

  <div class=span8>
    <div class=dotted-border-header>
      Concept Progress
    </div>
    <div id=concept_progress class='dotted-border teacher-details-column'>
      <%= render :partial => 'concept_progress' %>
    </div>
  </div>
</div>

<div class=row-fluid>
  <div class=dotted-border-header>
    Individual Student Progress
  </div>
  <div class=dotted-border>
    <ul class="column-list">
      <% @students.sort { |a,b| a.name <=> b.name }.each do |student| %>
      <li>
        <%= student.name %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
