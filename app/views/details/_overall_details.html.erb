<%- unless @chart_data_1.blank? or @top_weak_students.blank? -%>
	<div class="row-fluid pull-right">
		<%= link_to "Start session", new_classroom_lesson_path(@classroom), remote: :true %>
		<%= " | " %>
		<%#= link_to "Start indefinite session", "javascript: start_indefinite_session( #{@classroom.id}, #{@teacher.id} )" -%> 
		<%= link_to "Start Indefinite Session", classroom_lessons_path(@classroom, teacher_id: @teacher.id, type: "indefinite"), method: :post if @lesson.blank? %>
		<%= " | " %>
		<%#= link_to "Stop session", "javascript: stop_indefinite_session( #{@classroom.id}, #{@teacher.id}, #{@lesson.id} )" if defined? @lesson and !@lesson.blank? %>

		<%= link_to "Stop Indefinite Session", stop_session_classroom_lesson_path(@classroom, @lesson, teacher_id: @teacher.id, type: "indefinite") if defined? @lesson and !@lesson.blank? %>
		<div id="session_form"></div>
	</div>
	
	<%= render "classrooms/overall_chart_and_top_weak_students", :@chart_data_1 => @chart_data_1, :@top_weak_students => @top_weak_students %>
<%- end -%>	

<div id='check'>
</div>
<div id="classroom_problem_sets" class='row'>
		<div class='col-md-6'>
		<%= render "classrooms/top_weak_students", :@top_weak_students => @top_weak_students %>
	</div>
	<div class='teacher-details-body col-md-6'>
		<h2>
			Problem Sets
		</h2>
		<div>
			<div>
				<%- unless @classroom_problem_sets.blank? -%>
					<ul style='padding:0'>
						<%- @classroom_problem_sets.each do |classroom_problem_set| -%>
							<li style='border:1px solid #ccc; padding:3px'>
								<%= link_to classroom_problem_set.problem_set.name, details_path(@classroom.id, type: "problem_sets", 
									problem_set_id: classroom_problem_set.problem_set.id ) %>
							</li>
						<% end %>
					</ul>
				<%- else -%>
					Ah Snap !! Looks like you haven't assigned any problem set to this classroom
				<%- end -%>
			</div>
		</div>
	</div>
</div>
<script>
	$(function() {
		<%- unless @lesson.blank? -%>
  			validate_datetime();
  		<%- end -%>
	});

	function start_indefinite_session( classroom_id, teacher_id ) {
		var _classroom_id = classroom_id
		var _teacher_id = teacher_id

		$.ajax({
			type: "POST",
			url: "http://localhost:3000/classrooms/" + _classroom_id + "/lessons?teacher_id=" + _teacher_id + "&type=indefinite",
			dataType: "html",
			contentType: "text/html; charset=utf-8",
		});
	}

	function stop_indefinite_session( classroom_id, teacher_id, lesson_id ) {
		var _classroom_id = classroom_id
		var _teacher_id = teacher_id
		var _lesson_id = lesson_id

		$.ajax({
			type: "GET",
			url: "http://localhost:3000/classrooms/" + _classroom_id + "/lessons/" + _lesson_id + "/stop_session?teacher_id=" + _teacher_id + "	&type=indefinite",
			dataType: "html",
			contentType: "text/html; charset=utf-8",
		});
	}

	function send_request( classroom_id, lesson_id, type ) {
		var _classroom_id = classroom_id
		var _lesson_id = lesson_id
		var _session_type = type

		$.ajax({
			type: "GET",
			url: "http://localhost:3000/classrooms/" + _classroom_id + "/lessons/" +  _lesson_id + "?type=" + _session_type,
			dataType: "script",
			contentType: "application/text; charset=utf-8",
		});
	}

	function validate_datetime(){
		<%- unless @lesson.blank? -%>
			<%- if @lesson.end_time.blank? -%>
				var timer = setInterval("send_request(" + <%= @classroom.id %> + ", " + <%= @lesson.id %> + ", 'indefinite' )", 10000);
			<%- else -%>
				var timer = false;		
				time_now = new Date( <%= Time.now.utc.to_i %> * 1000 );
		    	lesson_start_time = new Date( <%= (@lesson.start_time - 5.hours - 30.minutes).to_i %> * 1000 );
		    	lesson_end_time = new Date( <%= (@lesson.end_time - 5.hours - 30.minutes).to_i %> * 1000 );
	    		if (time_now >= lesson_start_time && time_now < lesson_end_time) 
				{
					timer = setInterval("send_request(" + <%= @classroom.id %> + ", " + <%= @lesson.id %> + ", 'definite' )", 10000);
				}
				else
				{
					clearTimeout(timer);
					timer = false;
				}
			<%- end -%>
		<%- end -%>
	}


</script>