<h2><%= @classroom.name %></h2>
<h3>What's happening in this classroom:</h3>
<div class="row-fluid">									
	<%- @activities.each do |activity| -%>
		<div class="row-fluid">
			<div class="span2">
				<%= link_to activity[1], student_path(activity[0]) %>
			</div>
			<div class="span6">
				<%= activity[2] %>
			</div>
			<div class="span2">
				<%= event_time_format(activity[3]) %>
			</div>
		</div>
	<%- end -%>
</div>
<div class="row-fluid">
	<h3>Comments: </h3>
	<div class="row-fluid" id="comments">
		<%= render "comments/comments", :comments => @comments %>
	</div>
</div>