<div class='navbar' style='margin-bottom:0px;'>
	<div class="navbar-inner" style="height:40px; border-radius:0px; -webkit-border-radius:0px; background:#bdc3c7;">
<a class="brand"><%=@classroom.name %> - Discussion</a>
</div>
</div>
<div class="row-fluid" id="t_or_c">
	<div class="span8">
		<div class="row-fluid" id="all_topics">
			<%= render "topics/topics", :topics => @topics, :user => current_user, :classroom_id => @classroom.id %>
		</div>
		<div id="new_topic_form">
			<div style='margin-left:auto; margin-right:auto; width:80%'>
				<h4>Add a New Post</h4>

				<%= render "topics/form_for_new_topic", :user => current_user, :classroom_id => @classroom.id, :topic => @topic %>
			</div>
		</div>
	</div>
	<div class="span4">
		<h1>Recent Topics</h1>
		<%- unless @recent_topics.blank? -%>
			<%- @recent_topics.each do |recent_topic| -%>
				<%= link_to	recent_topic.title, user_topic_path(current_user, recent_topic, classroom_id: @classroom_id) %>
			<%- end -%>
		<%- else -%>
			<h2>No Recent Topics</h2>
		<%- end -%>

		<h1>Recent Comments</h1>
		<%- unless @recent_comments.blank? -%>
			<%- @recent_comments.each do |recent_comment| -%>
				<%= recent_comment.content_html %>
			<%- end -%>
		<%- else -%>
			<h2>No Recent Comments</h2>
		<%- end -%>
	</div>
</div>
<div id='test'></div>

