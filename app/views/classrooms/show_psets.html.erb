<div class="row-fluid">
  <h2>Assign a Problem Set to class <%= @classroom.name %></h2>
</div>
<div class="row-fluid">
  <div class="span6">
    <ul class="column-list overlay_list">
      <li class="list-header">SmarterGrades Sets</li>
      <% @sg_psets.each do |pset| %>
        <li><%= pset.name %>
            <% if @assigned_problem_sets.include? pset.id and !@assigned_problem_sets.blank? %>
              <%= link_to "Assigned", "#", :class => "btn btn-inverse pull-right", :remote => true %>
            <% else %>
              <%= link_to "Assign", assign_pset_path(id: @classroom.id, pset_id: pset.id), 
                  :class => "btn pull-right", :remote => true %>              
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="span6">
    <ul class="column-list overlay_list">
      <li class="list-header">My Problem Sets</li>
      <% @my_psets.each do |pset| %>
        <li><%= pset.name %>
            <% if @assigned_problem_sets.include? pset.id and !@assigned_problem_sets.blank? %>
              <%= link_to "Assigned", "#", :class => "btn btn-inverse pull-right", :remote => true %>
            <% else %>
              <%= link_to "Assign", assign_pset_path(id: @classroom.id, pset_id: pset.id), 
                  :class => "btn pull-right", :remote => true %>              
            <% end %>       
        </li>
      <% end %>
    </ul>
  </div>
</div>
