<div class="row-fluid">
    <%= render 'teachers/teacher_info', :teacher => @teacher %>
</div>
<div class="row-fluid">
    <ul class="breadcrumb">
        <li>
            <b><%= @classroom.name %></b> 
            <span class="divider">&amp;</span>
        </li>
        <li>
            <b><%= @problem_set.name %></b> 
            <span class="divider">&amp;</span>
        </li>
        <li class="active">
            New Quiz
            <span class="divider">&amp;</span>
        </li>
    </ul>
</div>
<div id="quiz_problems_message" class="teacher-details-header" style="margin-bottom:5px;"></div>
<div class="row-fluid">
    <div class="span8">
        <div class="dotted-border-header">
            Students
        </div>
        <div class='dotted-border teacher-details-column'>
            <ul class='column-list' id="quiz_problems_tabs">
                <%= form_tag(new_quiz_path( classroom: @classroom.id, 
                                            pset: @problem_set.id, 
                                            type: "single_class_specific_students"
                                            ), method: :post) do %>

                    <% @students.each do |student| %>    
                        <%= check_box("classroom_quizzes", "students", {:multiple => true}, student.id, nil) %>                  
                        <%= student.name %><br />
                    <% end %>

                    <%= submit_tag "Next" %>
                <% end %>
            </ul>
        </div>
    </div>
</div>