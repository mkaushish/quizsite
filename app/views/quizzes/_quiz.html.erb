<%# remember "quiz" is passed in by :object => (quiz) %>
<div class="problemscores tab-pane fordelete_<%= quiz.idname %>" id=<%= quiz.idname %>>
  <div style="border-bottom:2px solid; margin:0; padding:15px 0 7px 3px;">
    <div class="btn-group"> 
      <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        <%= quiz.name  %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to raw("<i class='icon-arrow-right'></i> Start Practicing!"), startquiz_path(:quizid => quiz.id) %></li>
        <% if quiz.user_id == current_user.id %>
          <li><%= link_to raw("<i class='icon-pencil'></i> Change Quiz Problems"), edit_quiz_path(quiz) %></li>
          <li><%= link_to raw("<i class='icon-remove-circle'></i> Delete This Quiz"), 
            quiz_path(quiz),
            :confirm => "Are you sure you want to delete the quiz \"#{quiz.name}?\"",
            :remote => true,
            :method => :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% ct = 1 %>
  <ul>
    <% quiz.ptypes.each do |ptype| %>
      <li>
      <%= ptype.type %>
      <%= get_smartscore(ptype) %>
      <div class="<%= smartscore_class(current_user.smartScore(ptype)) %>" style="width:<%=current_user.smartScore(ptype).to_i%>%; height:4px"></div>
      </li>
      <% ct+=1 %>
    <% end %>
  </ul>
</div>
