<%# remember "quiz" is passed in by :object => (quiz) %>
<div class="problemscores tab-pane fordelete_<%= quiz.idname %>" id=<%= quiz.idname %>>
  <div style="border-bottom:2px solid; margin:0; padding:15px 0 7px 3px;">
    <div class="btn-group"> 
      <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        <%= quiz.name  %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to raw("<i class='icon-arrow-right'></i> Start Practicing!"), startquiz_path(:quizid => quiz.id) %></li>
        <li><%= link_to raw("<i class='icon-pencil'></i> Change Quiz Problems"), edit_quiz_path(quiz) %></li>
        <li><%= link_to raw("<i class='icon-remove-circle'></i> Delete This Quiz"), 
          quiz_path(quiz),
          :confirm => "Are you sure you want to delete the quiz \"#{quiz.name}?\"",
          :remote => true,
          :method => :delete %>
        </li>
      </ul>
    </div>
  </div>
  <br style="clear:both;">
  <% ct = 1 %>
  <ul>
    <% quiz.ptypes.each do |ptype| %>
      <li>
      <%= "#{ct}. #{ptype.type}" %>
      <%= get_smartscore(ptype) %>
      <br style="clear:both;">
      </li>
      <% ct+=1 %>
    <% end %>
  </ul>
  <% cname=quiz.idname+"_canvas" %>
  <% tname=quiz.idname+"_table" %>
  <canvas id=<%= cname %> height=350 width=450>
  </canvas>
  <%= hidden_field_tag('edit', "noedit") %>
  <%= hidden_field_tag('type', "basicbar") %>
  <%= hidden_field_tag('editdivs', "noedit") %>
  <%= hidden_field_tag('divs', 10) %>
  <table id=<%= tname %> style="display:none;">
    <% ct = 1 %>
    <% quiz.ptypes.each do |ptype| %>
      <tr>
        <td><%= hidden_field_tag(ptype.type, "#{ct}") %></td>
        <td><%= hidden_field_tag("#{ptype.type}_score", current_user.smartScore(ptype)) %></td>
      </tr>
      <% ct+=1 %>
    <% end %>
  </table>
  <script>
    setUpDataGr("<%= cname %>", "<%= tname %>");
  </script>
</div>
