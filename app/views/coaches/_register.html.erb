<%= form_for Coach.new, :remote => true do |f| %>
  <h2>Sign Up as as Coach</h2>
  <div class = "error_block" id = "new_coach_err"></div>
  <div class="row-fluid">
    <div class=span6>
      <div class = "field_block">
        <%= f.label :name %> 
        <div class= "error_block" id="coach_name_err"></div>
        <%= f.text_field "name", :placeholder=>"Your Name here" %>
      </div>
      <div class = "field_block">
        <%= f.label :email %> 
        <div class = "error_block" id = "coach_email_err"></div>
        <%= f.text_field "email", :placeholder=>"Your Email here" %>
      </div>
      <div class = "field_block">
        <%= f.label :password %> 
        <div class="error_block" id="teacher_password_err"></div>
        <%= f.password_field "password", :placeholder => "Set Some Password" %>
      </div>
      <div class = "field_block">
        <%= f.label :password_confirmation %> 
        <div class="error_block" id="teacher_password_confirmation_err"></div>
        <%= f.password_field "password_confirmation", :placeholder => "Please Provide the same Password again" %>
      </div>
    </div>
  </div>
  
  <div class = "actions">
    <%= f.submit "Sign Up!", :class=>"button-blue" %>
  </div>
<% end %>
