<ul class='col-list-2 details_quiz_hist'>
	<li>
		<% if current_user.is_a? Teacher %>
			<%= link_to "Create Quiz", new_teacher_quiz_path(current_user, pset: @problem_set.id) %>
			for <%= print_ps @problem_set %> 
		<% end %>
	</li>
	<% if @quiz_history.empty? %>
		<li>You haven't assigned any quizzes on this problem set yet</li>
    <% else %>
    	<li><%= @classroom.name + " Quizzes" %></li>
	  	<% @quiz_history.each_with_index do |quiz, index| %>
	  		<% index += 1 %>
	  		<li class="assign_quiz_form">
				<div>
					<%= link_to quiz.name, teacher_quiz_path(@teacher, quiz.id, classroom_id: @classroom.id) %>
				</div>
			</li>
	  	<% end %>
	<% end %>
</ul>

<script>
  $(function () {
    $('.details_quiz_hist').jScrollPane({ contentWidth: '0px' });
  })
</script>