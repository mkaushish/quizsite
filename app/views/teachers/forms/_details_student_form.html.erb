<%= form_tag details_path(@classroom.id), :method => 'get', :class => 'inline-form', :id => 'student-form' do %>
  <%= hidden_field_tag "type", type if defined? type %>
  <%= label_tag "student_id", "Student" %>
  <% if @students.empty? %>
    <%= select_tag :student_id, "", disabled: true %>
  <% else %>
    <%= select_tag :student_id, 
      options_from_collection_for_select(@students, 'id', 'name', @student.id),
      { class: 'select' }
    %>
    <%= submit_tag "Get Details", :class=>"button-blue" %>
  <% end %>
<% end %>