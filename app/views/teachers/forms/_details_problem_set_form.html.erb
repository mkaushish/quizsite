<%= form_tag(details_problem_set_path, :remote => true, :id => 'pset-form', :class => 'inline-form') do %>
  <%= hidden_field_tag 'ps_classroom_id', @classroom.id.to_s %> 
  <%= label_tag "problem_set_id", "Problem Set" %>
  <% if @problem_sets.empty? %>
    <%= select_tag :problem_set_id, "", disabled: true %>
  <% else %>
    <%= select_tag :problem_set_id, 
      options_from_collection_for_select(@problem_sets, 'id', 'name', @problem_set.id),
      { class: 'select' }
    %>
    <%= link_to "+ Modify", edit_problem_set_path(@problem_set), 
      :class => "button-blue", :style => 'padding:3px;' %>
  <% end %>
<% end %>

<script>
  $('#problem_set_id').change(function() {
    $(this).parents('form').submit();
  });
</script>
