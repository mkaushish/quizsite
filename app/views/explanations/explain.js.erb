if($('#problem_overlay .explanation').length < 1) {
	<% if @orig_prob.problem.is_a?(QuestionWithExplanation) %>
		$('#problem_overlay .problem').after('<%= j(render "explanation") %>');
		showExplanation();
	<% elsif !@explanation.blank? %>
		$('#problem_overlay .problem').after('<%= j(render "explanation", :explanation => @explanation) %>');
	<% end %>
}
