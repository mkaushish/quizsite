<div class=row-fluid>
  <h3 style="display:inline-block;">Learning</h3>
  <ul class="breadcrumb">
    <li><b>6th Grade </b><span class="divider">&amp;</span></li>
    <li><%= @problem_set.name %> <span class="divider">&amp;</span></li>
    <li class=active><%= @problem_type.to_s %></li>
  </ul>
</div>

<div class=row-fluid>
  <div class=span8>
    <div class=dotted-border-header>
      <b>Problem Set:</b> <%= @problem_set.name %> <b>Score:</b> 36 / 42
    </div>
    <div class='dotted-border'>
      <%= form_tag finish_ps_problem_path(@problem_set.id), :method => :post, :autocomplete => :off do %>
        <%= hidden_field_tag 'stat_id', @stat.id.to_s %>
        <%= render 'problemanswers/form' %>
      <% end %>
    </div>
  </div>

  <div class=span4>
    <div class='dotted-border below-dotted-border-header'>
      <%= render :partial => 'problems/side_notepad.html.erb' %>
    </div>
  </div>
</div>
