<div id='shelf'>
  <ul>
    <li><%= link_to (image_tag @student.image.url(:thumb)), edit_student_path, :remote => true  %><%= link_to 'Account',  edit_student_path, :remote => true, :class => 'plate' %></li>
    <li><div id='points'><%= number_with_delimiter(@student.points) %></div><a class='plate' style='margin-top:7px'>Points</a></li>
  </ul>
</div>
<div class="quiz-link">
<%= link_to "Take a Quiz", quiz_do_path(@problem_set.id), :remote => true %>
</div>
<div class=row-fluid>
  <div class=span4>
    <div class='dotted-border-header'>
      <h4>History</h4>
    </div>

    <div class='dotted-border' style='min-height:400px;'>
      <ul id="problem_history" class="column-list">
        <% if @history.empty? %>
          <li>Problems will show up here as you do them</li>
        <% else %>
          <%= render :partial => 'history_ans', :collection => @history, :as => :answer %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="gif_tick">
    <img src="/assets/Boxes_Animation.gif"></img>
  </div>
  <div class=span8 >
    <div class=jScroll_bboard >
      <%= render :partial => 'shared/list_box_table', 
        :locals => { :items => @stats, :partial => 'problem_set_instances/problem_list_box' } %>
    </div>
  </div>
</div>
